<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentTop="true"
    android:background="@color/transparent"
    android:clipToPadding="false"
    android:theme="@style/ToolbarTheme"
    app:layout_collapseMode="pin"
    app:titleTextColor="@color/font_black_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <com.app.githubapp.widget.CustomTextViewRegular
            android:id="@+id/tv_toolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_large" />

        <com.app.githubapp.widget.CustomTextViewAwesome
            android:id="@+id/textview_globe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="@string/fa_globe"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

    </RelativeLayout>
</android.support.v7.widget.Toolbar>